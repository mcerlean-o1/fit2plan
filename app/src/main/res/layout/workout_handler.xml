<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardColor"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.457"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="750dp">

            <TextView
                android:id="@+id/textWorkout"
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:layout_marginTop="96dp"
                android:text="Workout"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.634"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNotes"
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:layout_marginTop="560dp"
                android:layout_marginBottom="23dp"
                android:text="Notes"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/edt_multiNotes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/edt_a1"
                android:layout_width="290dp"
                android:layout_height="43dp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="A1 Workout"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/textA1"
                app:layout_constraintTop_toBottomOf="@+id/horizontalView1" />

            <TextView
                android:id="@+id/edt_a2"
                android:layout_width="290dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="A2 Workout"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/textA2"
                app:layout_constraintTop_toBottomOf="@+id/horizontalView2" />

            <TextView
                android:id="@+id/edt_b1"
                android:layout_width="290dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="B1 Workout"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/textB1"
                app:layout_constraintTop_toBottomOf="@+id/horizontalView3" />

            <TextView
                android:id="@+id/edt_b2"
                android:layout_width="290dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="B2 Workout"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/textB2"
                app:layout_constraintTop_toBottomOf="@+id/horizontalView4" />

            <TextView
                android:id="@+id/edt_c1"
                android:layout_width="290dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="C1 Workout"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/textC1"
                app:layout_constraintTop_toBottomOf="@+id/horizontalView5" />

            <TextView
                android:id="@+id/edt_multiNotes"
                android:layout_width="352dp"
                android:layout_height="114dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:text="Notes"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/edt_c2"
                android:layout_width="290dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="C2 Workout"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/textC2"
                app:layout_constraintTop_toBottomOf="@+id/horizontalView6" />

            <TextView
                android:id="@+id/textB1"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginTop="276dp"
                android:text="B1"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.036"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textB2"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginTop="348dp"
                android:text="B2"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textC1"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginTop="416dp"
                android:text="C1"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textC2"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginTop="488dp"
                android:text="C2"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textA2"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginTop="212dp"
                android:text="A2"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.036"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="211dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="date"
                android:text="DD/MM/YYYY"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.109"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <TextView
                android:id="@+id/textA1"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginTop="148dp"
                android:text="A1"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/horizontalView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="140dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <View
                android:id="@+id/horizontalView1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="76dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <View
                android:id="@+id/horizontalView3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="204dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <View
                android:id="@+id/horizontalView4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="272dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <View
                android:id="@+id/horizontalView5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="340dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <View
                android:id="@+id/horizontalView6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="412dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="468dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <View
                android:layout_width="1dp"
                android:layout_height="460dp"
                android:layout_marginStart="56dp"
                android:layout_marginBottom="212dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="114dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_button"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.021" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

